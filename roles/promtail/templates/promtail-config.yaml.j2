server:
  http_listen_port: {{ promtail_http_port }}
  grpc_listen_port: {{ promtail_grpc_port }}

positions:
  filename: {{ promtail_positions_file }}

clients:
  - url: {{ promtail_loki_url }}

scrape_configs:
  - job_name: {{ promtail_job_name }}
    static_configs:
      - targets:
          - localhost
        labels:
          job: {{ promtail_job_label }}
          __path__: {{ promtail_log_path }}